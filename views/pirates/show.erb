<h1>Pirate</h1>
  <h3>Pirate Name: <%= @pirate.name %></h3>
  <h3>Pirate Weight: <%= @pirate.weight %></h3>
  <h3>Pirate Height: <%= @pirate.height %></h3>

<br>

<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Ship Name: <%= ship.name %></p><br>
    <p>Ship Type: <%= ship.type %></p><br>
    <p>Ship Booty: <%= ship.booty %></p><br>
  </div><br>
<% end %>