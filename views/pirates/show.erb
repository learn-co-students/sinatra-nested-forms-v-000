

<h1>Pirate information</h1>

  <div class="pirate">
    <h3>Name: <%= @pirate.name %></h3>
    <h4>Weight: <%= @pirate.weight %></h4>
    <h4>Weight: <%= @pirate.height %></h4>
  </div>

<h2>Ship information</h2>
<% @ships.each do |ship| %>

  <div class="ship">
    <p>Ship Name: <%= ship.name %></p>
    <p>Ship Type: <%= ship.type %></p>
    <p>Ship Booty: <%= ship.booty %></p>
  </div>

<% end %>
