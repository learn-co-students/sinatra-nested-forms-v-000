<h1>Pirate</h2>

<div class="pirate">
  <h3>Name: <%= @pirate.name %></h2>
  <h3>Weight: <%= @pirate.weight %></h2>
  <h3>Height: <%= @pirate.height %></h2>
</div>

<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
  </div>
<% end %>
