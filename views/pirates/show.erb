<h1>Pirate</h1>
<h3>Argggg Me Matey's!</h3>
<div class="pirate">
  <h2>Name: <%= @pirate.name %></h2>
  <h3>Weight: <%= @pirate.weight %><h3>
  <h3>Height: <%= @pirate.height %><h3>
</div><br>


<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <h2>Name: <%= ship.name %></h2>
    <h3>Type: <%= ship.type %></h3>
    <h3>Booty: <%= ship.booty %></h3><br>
  </div><br>
  <% end %>
