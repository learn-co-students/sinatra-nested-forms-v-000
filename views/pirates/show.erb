<h1>Pirate</h1>

<div class="pirate">
<h3>Name: <%= @pirate.name %></h3>
<h3>Weight: <%= @pirate.weight %></h3>
<h3>Height: <%= @pirate.height %></h3>
</div><br>

<h1>Ships</h1>
<% @ships.each.with_index(1) do |ship, i| %>
  <div class="course">
    <h3><%= "Ship #{i}." %></h3>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
  <% end %>
