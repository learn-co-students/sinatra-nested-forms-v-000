<h1>Pirate</h1>
<p>Name: <%=@pirate.name%></p>
<p>Weight: <%=@pirate.weight%></p>
<p>Height: <%=@pirate.height%></p>

<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
