<h1>Pirates</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div><br>

<h2>Ships</h2>

<% @ships.each do |ships| %>
  <div class="ships">
    <p>Name: <%= ships.name %></p><br>
    <p>Type: <%= ships.type %></p><br>
    <p>Booty: <%= ships.booty %></p><br>
  </div><br>
<% end %>
