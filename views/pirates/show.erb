<h1>Display your Pirate here</h1>
<ul>
  <li>Name: <%= @pirate.name %></li>
  <li>Weight: <%= @pirate.weight %></li>
  <li>Height: <%= @pirate.height %></li>
</ul>

<% @ships.each_with_index do |ship, number| %>
  <h2>Ship <%= number + 1 %></h2>
  <ul>
    <li>Name: <%= ship.name %></li>
    <li>Type: <%= ship.type %></li>
    <li>Booty: <%= ship.booty %></li>
  </ul>
<% end %>
