<!DOCTYPE html>
<html>
  <head>
    <title>Pirate</title>
  </head>

  <body>

    <div class="pirate">
      <h1>Name: <%= @pirate.name %></h1>
      <h2>Weight: <%= @pirate.weight %></h2>
      <h2>Height: <%= @pirate.height %></h2>
    </div>

    <!-- Loop through @ships array -->
    <div class="ship">
      <h2>Ships:</h2>
      <% @ships.each do |ship| %>
        <h3>Name: <%= ship.name %></h3>
        <h3>Type: <%= ship.type %></h3>
        <h3>Booty: <%= ship.booty %></h3>
      <% end %>
    </div>

