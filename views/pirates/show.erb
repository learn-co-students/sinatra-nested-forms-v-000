<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3><%= @pirate.name %></h3><br>
  <h3><%= @pirate.weight %></h3><br>
  <h3><%= @pirate.height %></h3>
</div><br>

<h2>Display your ships here</h2>
<% @ships.each do |ship| %>
<div class="ship">
  <h3>Ship Name: <%= ship.name %></h3>
  <h3>Ship Type: <%= ship.type %></h3>
  <h3>Ship Booty: <%= ship.booty %></h3>
<% end %>
