<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3>Name:</h3>
  <h3><%= @pirate.name %></h3>
  <h3>Weight:</h3>
  <h3><%= @pirate.weight %></h3>
  <h3>Height: </h3>
  <h3><%= @pirate.height %></h3>
</div><br>
<h2>Display your first ship here</h2>
  <% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type%></p><br>
    <p>Booty: <%= ship.booty%></p><br>
  </div><br>
<% end %>
<h2>Display your second ship here</h2>
  <% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type%></p><br>
    <p>Booty: <%= ship.booty%></p><br>
  </div><br>
<% end %>
