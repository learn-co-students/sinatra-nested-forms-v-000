<div class="pirate">
  <h1>Name: <%= @pirate.name %></h1>
  <h3>Height: <%= @pirate.height %></h3>
  <h3>Weight: <%= @pirate.weight %></h3>
</div><br>

<h2>Ships</h2>
<% @ships.each_with_index do |ship, index| %>
  <div class="ship">
    <h3><%= index + 1 %>. <%= ship.name %></h3>
    <h4>Type: <%= ship.type %></h4>
    <h4>Booty: <%= ship.booty %></h4>
  </div><br>
<% end %>
