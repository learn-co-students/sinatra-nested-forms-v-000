<div class="pirate">
  <h1>Pirate</h1>
  <h4>Name: <%= @pirate.name %></h4>
  <h4>Height: <%= @pirate.height %></h4>
  <h4>Weight: <%= @pirate.weight %></h4>
  </br>
</div>

<% counter = 1 %>
<% @ships.each do |ship| %>
  <div class="ships">
    <h1>Ship <%= counter %></h1>
    <h4>Ship Name: <%= ship.name %></h4>
    <h4>Ship Type: <%= ship.type %></h4>
    <h4>Ship Booty: <%= ship.booty %></h4>
    <% counter += 1 %>
    </br>
  </div>
<% end %>
