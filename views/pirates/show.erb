<h1>Display your Pirate here</h1>
<h1>Pirates</h1>
<div class="pirate">
  <h4>Name:   <%= @pirate.name %></h4>
  <h4>Height: <%= @pirate.height %></h4>
  <h4>Weight: <%= @pirate.weight %></h4>
</div><br>


<h2>Display your first ship here</h2>
<h1>Ships</h1>
<% @ships.each do |ship| %>
<div class="ship">
  <h4>Name:  <%= ship.name %></h4>
  <h4>Type:  <%= ship.type %></h4>
  <h4>Booty: <%= ship.booty %></h4>
</div><br>

<h2>Display your second ship here</h2>
<div class="ship">
  <h4>Name:  <%= ship.name %></h4>
  <h4>Type:  <%= ship.type %></h4>
  <h4>Booty: <%= ship.booty %></h4>
</div><br>
<%end%> 
