<h1>Pirate</h1>

<div class="student">
  <h3>Name: <%= @pirate.name %></h3>
  <h4>Height: <%= @pirate.height %></h4>
  <h4>Weight: <%= @pirate.weight %></h4>
</div><br>

<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
