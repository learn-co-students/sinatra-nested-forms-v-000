<div class="pirate">
  <h1>Name: <%= @pirate.name %></h1>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div>

<br>

<h1>Ships</h1>
<div class="ships">
  <% @ships.each do |ship| %>

    <div class="ship">
      <h2>Name: <%= ship.name %></h2>

      <p>Type: <%= ship.type %></p>
      <br>
      <p>Booty: <%= ship.booty %></p>
      <br>
    </div>

    <br>

  <% end %>
</div>
