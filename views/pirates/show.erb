<!DOCTYPE html>

<html>
  <h1>Pirate</h1>
  <div class="pirate">
    <h2>Name: <%= @pirate.name %></h2>
    <h3>Weight: <%= @pirate.weight %></h3>
    <h3>Height: <%= @pirate.height %></h3>
  </div>

  <h2>Ships</h2>
  <% @ships.each do |ship| %>
    <div class="ship">
      <h2>Ship's Name: <%= ship.name %></h2>
      <h3>Ship's Type: <%= ship.type %></h3>
      <h3>Ship's Booty: <%= ship.booty %></h3>
    </div>
  <% end %>
</html>