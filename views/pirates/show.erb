<h1>Display your Pirate here</h1>
  <div class="pirate">
    <h2>NAME: <%=@pirate.name%></h2>
    <h3>Height: <%=@pirate.height%></h3>
    <h3>Weight: <%=@pirate.weight%></h3>
  </div>

  <h1>SHIPS</h1>
    <% @ships.each do |ship| %>
      <div class="ship">
        <p>Name: <%= ship.name %></p><br>
        <p>Type: <%= ship.type %></p><br>
        <p>Booty: <%= ship.booty %></p><br>
      </div><br>
    <% end %>
