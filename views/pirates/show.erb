<h1>Pirates</h1>
<div class="pirate">
  <h2>Name: <%= @pirate.name %></h2>
  <h2>Weight: <%= @pirate.weight %> pounds</h2>
  <h2>Height: <%= @pirate.height %> inches</h2>
</div><br>

<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
