<h1>Pirate</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3>
  <h4>Height: <%= @pirate.height %> pounds</h4>
  <h4>Weight: <%= @pirate.weight %> inches</h4>
</div>

<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ships">
    <h3>Name: <%= ship.name %></h3>
    <h4>Type: <%= ship.type %></h4>
    <h4>Booty: <%= ship.booty %></h4>
  </div>
<% end %>

