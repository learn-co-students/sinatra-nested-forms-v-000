<h1>Pirate: <%= @pirate.name %></h1>
<h3>Weight: <%= @pirate.weight %></h3>
<h3>Height: <%= @pirate.height %></h3>
<h3>Ships:</h3>
<% @ships.each do |ship| %>
  <div class="container">
      <h4>Name: <%= ship.name %></h4>
      <h4>Type: <%= ship.type %></h4>
      <h4>Booty: <%= ship.booty %></h4>
  </div>
<% end %>
