<html>
<head>
  <meta charset="UTF-8">
  <title>Pirate Ship Info</title>
</head>
<body>
  <h1><%= @pirate.name %>: <%= @pirate.weight %> - <%= @pirate.height %></h1>

  <h2>Ships</h2>
  <% @ships.each do |ship| %>
    <p><%= ship.name %></p>
    <p><%= ship.type %></p>
    <p><%= ship.booty %></p><br>
  <% end %>

</body>
</html>