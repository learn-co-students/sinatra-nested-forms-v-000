<h1>Your Pirate</h1>
  <h3><%= @pirate.name %></h3>
  <h3><%= @pirate.weight %></h3>
  <h3><%= @pirate.height %></h3>

<h2>Your Ships</h2>
  <% @ships.each do |ship| %>
    <h3>Ship Name <%= ship.name %></h3>
    <h3>Ship Type <%= ship.type %></h3>
    <h3>Ship Booty <%= ship.booty%></h3>
  <% end %>
