<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name%></h3>
  <h2>Weight: <%= @pirate.weight%></h2>
  <h2>Height:  <%= @pirate.height %></h2>
</div>

<br> 
<h2>Ships</h2>

<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
