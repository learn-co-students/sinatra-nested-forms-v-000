<div>
<h1>Pirates</h1>
    <ul>
      <li><h3>Name: <%= @pirate.name %> </h3></li>
      <li><h3>Weight: <%= @pirate.weight %> </h3></li>
      <li><h3>Height: <%= @pirate.height %> </h3></li>
    </ul>
  </div>

<div>
<h1>Ships</h1>
  <% @ships.each do |ship| %>
  <div>
    <ul>
     <li><h3>Name: <%= ship.name %></h3></li>
     <li><h3>Type: <%= ship.type %></h3></li>
     <li><h3>Booty: <%= ship.booty %></h3></li>
    </ul>
    <p>-------------------------------------------</p>
  </div>
<% end %>
