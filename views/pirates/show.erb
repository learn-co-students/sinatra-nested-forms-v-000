

<h1>Display your Pirate here</h1>
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Height: <%= @pirate.height %></h4><br>
  <h4>Weight: <%= @pirate.weight %></h4>

<h2>Display your first ship here</h2>

 <p><%= @ship1.name %></p>
 <p><%= @ship1.type %></p>
 <p><%= @ship1.booty %></p>


 <h2>Display your second ship here</h2>
 <p><%= @ship2.name %></p>
 <p><%= @ship2.type %></p>
 <p><%= @ship2.booty %></p>

<h2>Ships</h2>
   <% @ships.each do |ship| %>
     <div class="ship">
       <h2>Ship's Name: <%= ship.name %></h2>
       <h3>Ship's Type: <%= ship.type %></h3>
       <h3>Ship's Booty: <%= ship.booty %></h3>
     </div>
   <% end %>