<h1>PIRATE</h1>

<div class="pirate">
  <h2>Name: <%= @pirate.name %></h2>
  <h3>Height: <%= @pirate.height %></h3>
  <h3>Weight: <%= @pirate.weight %></h3>
</div><br>

<h1>SHIPS</h1>
<% count = 1 %>
<% @ships.each do |ship| %>
  <div class="ship">
    <h2>Ship <%= count %>:</h2>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p><br>
    <% count += 1 %>
  </div><br>
<% end %>
