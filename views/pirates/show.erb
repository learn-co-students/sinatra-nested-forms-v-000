<!Doctype>
<html>

<body>

  <h1>Pirates! Arg!</h1>

  <div class="pirate">
    <h3>Name: <%= @pirate.name %></h3>
    <h4>Weight: <%= @pirate.weight %> pounds</h4>
    <h4>Height: <%= @pirate.height %> feet</h4>
  </div><br>

  <h1>Ships</h1>

  <% @ships.each do |ship| %>
    <div class="ship">
      <p>Name: <%= ship.name %></p>
      <p>Type: <%= ship.type %></p>
      <p>Booty: <%= ship.booty %></p>
    </div><br>
  <% end %>

</body>
</html>
