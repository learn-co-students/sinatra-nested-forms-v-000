<h1>Pirate</h1>

<div class="pirate">
<h3>Name:<%= @pirate.name %></h3><br>
<h4>Height:<%= @pirate.height %></h4><br>
<h4>Weight:<%= @pirate.weight %></hr><br>
</div>

<h2>Ships</h2><br>
<div class="ship">
<% @pirate.ships.each do |ship| %><br>
<p>Name:<%= @ship.name %></p><br>
<p>Category:<%= @ship.category %></p><br>
<p>Booty:<%= @ship.booty %></p><br>
</div>
<% end %>
