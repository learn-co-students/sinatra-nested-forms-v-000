<h1>Pirate</h1>

<div class="pirate">
  <h3>Name: <%= @pirate.name %> </h3><br>
  <h3>Weight: <%= @pirate.weight %> pounds </h3><br>
  <h3>Height: <%= @pirate.height %> inches</h3><br>
</div><br>

<h1>Ships</h1>
  <% @ships.each do |ship| %>
  <div class="ships">
    <p>Name: <%= ship.name %> </p> </br>
    <p>Type: <%= ship.type %> </p> </br>
    <p>Booty: <%= ship.booty %> </p> </br>
  </div><br>
<% end %>
