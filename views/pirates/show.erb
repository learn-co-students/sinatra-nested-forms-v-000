<h1>Your Pirate</h1>

<div class="pirate">
  <h4>Name: <%= @pirate.name %></h4>
  <h4>Height: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div>


<h2>And his Ships</h2>

<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
  </div>
<% end %>
