<h1>Pirate</h1>

<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4><br>
  <h4>Height: <%= @pirate.height %></h4><br>
</div><br>

<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <h5>Name: <%= ship.name %></h5><br>
    <h5>Type: <%= ship.type %></h5><br>
    <h5>Booty: <%= ship.booty %></h5><br>
  </div><br>
<% end %>
