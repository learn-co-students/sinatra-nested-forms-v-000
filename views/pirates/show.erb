<h1>Pirate</h1>
     
  <div class="pirate">
    <h4>Name: <%= @pirate.name %></h4><br>
    <h4>Height: <%= @pirate.height %></h4>
    <h4>Weight: <%= @pirate.weight %></h4>
  </div><br>
     
  <h1>Ship</h1>
  <% @ships.each do |ship| %>
    <div class="ship">
      <h4>Name: <%= ship.name %></h4>Name:><br>
      <h4>Type: <%= ship.type %></h4>Type:><br>
      <h4>Booty: <%= ship.booty %></h4>Booty:><br>
    </div><br>
  <% end %>
