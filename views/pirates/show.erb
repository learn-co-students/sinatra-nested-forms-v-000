<h2>Pirates</h2>

<div class="pirates">
  <h4>Pirate's Name: <%= @pirate.name %></h4>
  <h4>Pirate's Weight: <%= @pirate.weight %></h4>
  <h4>Pirate's Height: <%= @pirate.height %></h4>
</div>


<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
  </div><br>
<% end %>
