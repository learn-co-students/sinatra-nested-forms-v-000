<div class="pirate">
  <h2>Name: <%= @pirate.name %></h2><br>
  <h4>Weight: <%= @pirate.weight %></h4><br>
  <h4>Height: <%= @pirate.height %></h4>
</div><br>

<h3>Ships</h3>
  <div class="ships">
    <% @ships.each do |ship| %>
    <p>Name: <%=ship.name %></p><br>
    <p>Type: <%=ship.type %></p><br>
    <p>Booty: <%=ship.booty %></p>
      
  </div>
  <%end%>