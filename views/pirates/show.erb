<!DOCTYPE HTML>
<html>
<body>
	<h1>Pirate</h1>
	<h3>Name:<%= @pirate.name %></h3><br>
	<h3>Height:<%= @pirate.height %></h3><br>
	<h3>Weight:<%= @pirate.weight %></h3><br>
	<h2>Ship</h2>
	<% @ships.each do |ship| %>
		<div class="ship">
		<h3>Name:<%= ship.name %></h3><br>
		<h3>Type:<%= ship.type %></h3><br>
		<h3>Booty:<%= ship.booty %></h3><br>
	<% end %>
</body>
</html>


