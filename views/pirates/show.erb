
<div class="pirates">
  <h1>Pirates</h1>
  <h3>Pirate Name: <%=@pirate.name%></h3>
  <h3>Pirate Weight: <%=@pirate.weight%></h3>
  <h3>Pirate Height: <%=@pirate.height%></h3>
</div>

<div class="ships">
<h1>Pirates Ship</h1>
<%@ships.each do |ship|%>
  <h4>Ship Name: <%=ship.name%></h4>
  <h4>Ship Type: <%=ship.type%></h4>
  <h4>Ship Booty: <%=ship.booty%></h4>
<%end%>
</div>
