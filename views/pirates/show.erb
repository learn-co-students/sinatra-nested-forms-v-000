<h1>Pirate</h1>
<div class="pirate">
  <h2>Name: <%= @pirate.name%></h2><br>
  <h2>Weight: <%= @pirate.weight%> lbs</h2><br>
  <h2>Height: <%= @pirate.height%> inches</h2>
</div><br>

<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <h2>Name: <%= ship.name%></h2><br>
    <h2>Type: <%= ship.type%></h2><br>
    <h2>Booty: <%= ship.booty%></h2>
  </div><br>
<% end %>
