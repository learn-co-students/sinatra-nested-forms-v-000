<h1>Pirate</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Height: <%= @pirate.height %></h4><br>
  <h4>Weight: <%= @pirate.weight %></h4><br>

<% @ships.each do |ship| %>
  <h2>Ship</h2>
  <div class="ship">
  <h3>Name: <%= ship.name %></h3><br>
  <h4>Type: <%= ship.type %></h4><br>
  <h4>Booty: <%= ship.booty %></h4><br>
<% end %>
