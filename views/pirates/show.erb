<h1>Display your Pirate here</h1>
<h1>Pirate</h1>
<div class="pirate">
  <h2>Name: <%= @pirate.name %></h2><br>
  <h2>Weight: <%= @pirate.weight %></h2>
  <h2>Height: <%= @pirate.height %></h2>
</div><br>

<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Type: <%= ship.booty %></p><br>
  </div><br>
<% end %>
