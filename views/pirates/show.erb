<h1>Pirate</h1>
  
  <div class="pirate">
    <h2><%= @pirate.name %></h2>
    <h2><%= @pirate.height %></h2>
    <h2><%= @pirate.weight %></h2>
  </div>

<h2>Ships</h2>
  <div class="ship">
    <% i=1 %>
    <% @ships.each do |ship|%>
    <h2><%="Ship#{i}"%></h2>
    <h2><%= ship.name%></h2>
    <h2><%= ship.type%></h2>
    <h2><%=ship.booty%></h2>
    <% i+=1 %>
  </div>
  <% end%>

