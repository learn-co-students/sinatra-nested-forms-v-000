<h1>Pirate</h1>

 <div class="pirate">
   <h3>Name: <%= @pirate.name %></h3><br>
   <h4>Weight: <%= @pirate.weight %></h4>
   <h4>Height: <%= @pirate.height %></h4>
 </div><br>

 <h2><%= @pirate.name %>'s First Ship'</h2>
    <div class="ship">
      <p>Name: <%= Ship.all[0].name %></p><br>
      <p>Type: <%= Ship.all[0].type %></p><br>
      <p>Booty: <%= Ship.all[0].booty %></p><br>
    </div><br>

 <h2><%= @pirate.name %>'s Second Ship</h2>
     <div class="ship">
       <p>Name: <%= Ship.all[1].name %></p><br>
       <p>Type: <%= Ship.all[1].type %></p><br>
       <p>Booty: <%= Ship.all[1].booty %></p><br>
     </div><br>
