<div class="pirate">
<h1>Name: <%= @pirate.name %></h1>
<h1>Height: <%= @pirate.height %></h1>
<h1>Weight: <%= @pirate.weight %></h1>
</div>

<h2>Ships</h2>
  <% @ships.each do |ship| %>
      <div class="ship">
      <p>Name: <%= ship.name %></p>
      <p>Type: <%= ship.type %></p>
      <p>Booty: <%= ship.booty %></p>
    </div>
<% end %>
