<h1>Pirate!</h1>
<div class="pirate">
<h2>Pirate Name: <%=@pirate.name%></h2><br>
<h3>Pirate Weight: <%=@pirate.weight%></h3><br>
<h3>Pirate Height: <%=@pirate.height%></h3><br>
</div><br>

<h2>Ship number one</h2>
<%@ships.each do |ship|%>
  <div class="ship">
    <p>Name: <%=ship.name%></p><br><br>
    <p>Type: <%=ship.type%></p><br><br>
    <p>Booty: <%=ship.booty%></p><br><br>
  </div><br>
<%end%>
