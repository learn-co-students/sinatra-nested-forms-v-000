<h1>You created a new pirate!</h1>
<h3>Name: <%= @pirate.name %></h3>
<h3>Weight: <%= @pirate.weight %></h3>
<h3>Height: <%= @pirate.height %></h3>
<br>
<% i = 1 %>
<% @ships.each do |ship| %>
  <div class="ship">
  <h4>Ship <%= i %></h4>
  <h5>Name: <%= ship.name %></h5>
  <h5>Type: <%= ship.type %></h5>
  <h5>Booty: <%= ship.booty %></h5>
  <% i += 1 %>
  </div>
  <br>
<% end %>