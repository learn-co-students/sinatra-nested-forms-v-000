<h1>Pirate Info: <%= @pirate.name %></h1>
  <h3>Weight: <%= @pirate.weight %></h3>
  <h3>Height: <%= @pirate.height %></h3>

<h2>Ship Info</h2>
  <div class="ship">
  <% @ships.each do |ship| %>

      <p>Name: <%= ship.name %></p>
      <p>Type: <%= ship.type %>></p>
      <p>Booty: <%= ship.booty %></p>
    </div>
<% end %>
