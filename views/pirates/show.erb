<h1>Pirate Name: <%= @pirate.name %></h1>
<h3>Weight: <%= @pirate.weight %></h3>
<h3>Height: <%= @pirate.height %></h3>

<% @ships.each_with_index do |ship, index| %>
    <h2>Ship #<%= index + 1 %></h2>
    <h3>Name: <%= ship.name %></h3>
    <h3>Type: <%= ship.type %></h3>
    <h3>Booty: <%= ship.booty %></h3>
<% end %>