<h1>Pirate</h1>

<div>
    <h3>Name: <%= @pirate.name %></h3>
    <h4>Weight: <%= @pirate.weight %></h4>
    <h4>Height: <%= @pirate.height %></h4>
</div><br>

<h1>Ships</h1>
<% @ships.each do |ship| %>
    <div>
        <p>Name: <%= ship.name %></p>
        <p>Type: <%= ship.type %></p>
        <p>Booty: <%= ship.booty %></p>
    </div><br>
<% end %>