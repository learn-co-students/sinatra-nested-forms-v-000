<h1>New Pirate</h1>
<form method="POST" action="/pirates">
  <ul>
  <li>Name:<input type="text" name="pirate[name]"></li>
  <li>Weight:<input type="text" name="pirate[weight]"></li>
  <li>Height:<input type="text" name="pirate[height]"></li>
  <li>Booty:<input type="text" name="pirate[booty]"></li>
  <li>First Ship Name:<input id="ship_name_1" type="text" name="pirate[ships][][name]"></li>
  <li>First Ship Type:<input id="ship_type_1" type="text" name="pirate[ships][][type]"></li>
  <li>First Ship Booty:<input id="ship_booty_1" type="text" name="pirate[ships][][booty]"></li>
  <li>Second Ship Name:<input id="ship_name_2" type="text" name="pirate[ships][][name]"></li>
  <li>Second Ship Type:<input id="ship_type_2" type="text" name="pirate[ships][][type]"></li>
  <li>Second Ship Booty:<input id="ship_booty_2" type="text" name="pirate[ships][][booty]"></li>
  <li><input type="submit" value="Submit"></li>
  </ul>
</form>
