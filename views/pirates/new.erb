    <input type="text" id="ship_booty_1" placeholder="Booty" name="pirate[ships][][booty]"/>
    <h3>Ship 2</h3>
    <input type="text" id="ship_name_2" placeholder="Name" name="pirate[ships][][name]"/>
    <input type="text" id="ship_type_2" placeholder="Type" name="pirate[ships][][type]"/>
    <input type="text" id="ship_booty_2" placeholder="Booty" name="pirate[ships][][booty]"/>
