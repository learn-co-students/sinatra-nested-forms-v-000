
<h1>Welcome to the Nested Forms Lab!</h1>
<h2>Pirate Name!</h2>
<form action="/pirates" method="POST">
  <label for="pirate_name"> Name</label>
  <input type="text" id="pirate_name" name="pirate[name]"></input>
  
   <label for="pirate_height"> Height</label>
  <input type="text" id="pirate_height" name="pirate[height]"></input>

   <label for="pirate_weight"> Weight</label>
  <input type="text" id="pirate_weight" name="pirate[weight]"></input>
 
  
  <h2>Ships</h2>

   <label for="ship_name"> Ship No. 1 Name:</label>
  <input type="text" id = "ship_name_1" name="pirate[ships][][name]"></input>

   <label for="ship_category"> Ship No. 1 Category</label>
  <input type="text" id = "ship_type_1" name="pirate[ships][][type]"></input>
   <label for="pirate_booty"> Ship No. 1 booty</label>
  <input type="text" id = "ship_booty_1"  name="pirate[ships][][booty]"></input>


   <label for="ship_name"> Ship No. 2 Name:</label>
  <input type="text" id = "ship_name_2"  name="pirate[ships][][name]"></input>

   <label for="ship_category"> Ship No. 2 Category</label>
  <input type="text" id = "ship_type_2" name="pirate[ships][][type]"></input>
   <label for="pirate_booty"> Ship No. 2 booty</label>
  <input type="text" id = "ship_booty_2"  name="pirate[ships][][booty]"></input>
    
  <input type="submit" id = "Submit" value="Submit">
  
</form>
