    <input type="text" id="pirate_height" name="pirate[height]"><br>
    <button type="submit" value="submit">Submit</button><br>
    <h2>Ships</h2>
    <form method = "post" action = "/ship"> 
    <label for="ship_name">Ship Name:</label>
    <input type="text" id="ship_name" name="pirate[ships][][name]"><br>
    <label for="ship_type">Pirate Weight:</label>
    <input type="text" id="ship_type" name="pirate[ships][][type]"><br>
    <label for="ship_booty">Pirate Weight:</label>
    <input type="text" id="ship_booty" name="pirate[ships][][booty]"><br>
    <button type="submit" value="submit">Submit</button>
    </form>
