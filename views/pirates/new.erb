  <p>First Ship Booty <input id="ship_booty_1" type="text" name="pirate[ships][][booty]"> </p>

  <!-- Ship 2 -->
  <p>Second Ship Name <input type="text" id="ship_name_2" name="pirate[ships][][name]"> </p>
