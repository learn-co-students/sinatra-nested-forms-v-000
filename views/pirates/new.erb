    <h3>Pirate</h3>
    <input type="text" placeholder="Name" name="pirate[name]"/>
    <input type="text" placeholder="Weight" name="pirate[weight]"/>
    <input type="text" placeholder="Height" name="pirate[height]"/>
    <h3>Ship 1</h3>
