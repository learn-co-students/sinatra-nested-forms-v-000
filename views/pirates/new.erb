    <style type="text/css">
        .container {
            width: 300px;
            clear: both;
        }
        .container input {
            width: 100%;
            clear: both;
        }
    </style>

<div class="container">
    <form method="post" action="/pirates">
        <h2>Pirate Info:</h2>
        <label for="pirate_name">Name </label><input id="pirate_name" type="text" name="pirate[name]"><br>
