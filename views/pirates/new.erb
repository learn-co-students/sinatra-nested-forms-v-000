<form action="/pirates" method=post>

  <!-- Pirate -->
  <h2><em>New Pirate</em></h2>
  
  <label for="Name">Name:</label>
  <input type="text" name="pirate[name]"><br>
  <label for="Weight">Weight:</label>
  <input type="text" name="pirate[weight]"><br>
  <label for="Height">Height:</label>
  <input type="text" name="pirate[height]"><br>

    <!-- Ship -->
   <h2><em>New Ship</em></h2>

   <% @ids.each do |id| %>
    <label for="Name">Ship Name:</label>
    <input id="ship_name_<%=id%>" type="text" name="pirate[ships][][name]"><br>
    <label for="Weight">Ship Type:</label>
    <input id="ship_type_<%=id%>" type="text" name="pirate[ships][][type]"><br>
    <label for="Height">Ship Booty:</label>
    <input id="ship_booty_<%=id%>" type="text" name="pirate[ships][][booty]"><br>
  <% end %>
  <input type="submit" value="Submit">

</form>
