<h1>Welcome to the Nested Forms Lab!</h1>
 <form method="post" action="/pirates">

   <!-- Pirate -->
  <p>  <input type="text" name="pirate[name]"> </p>
  <p>  <input type="text" name="pirate[weight]"> </p>
  <p>  <input type="text" name="pirate[height]"> </p>

  <!-- Ship 1 -->
  <p>First Ship Name <input id="ship_name_1" type="text" name="pirate[ships][][name]"> </p>
