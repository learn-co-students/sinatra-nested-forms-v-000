        <label for="ship_type_2">Type </label><input id="ship_type_2" type="text" name="pirate[ships][][type]"><br>
        <label for="ship_booty_2">Booty </label><input id="ship_booty_2" type="text" name="pirate[ships][][booty]"><br>
        <button type="submit" value="submit">Submit</button>
