<form action="/pirates" method="POST">
  <!-- Pirate -->
  <h2>New Pirate</h2>
  <label for="pirate_name">Pirate Name:</label>
  <p><input type="text" id="pirate_name" name="pirate[name]"></p>
  <label for="pirate_height">Pirate Height:</label>
  <p><input type="text" id="pirate_height" name="pirate[height]"></p>
  <label for="pirate_weight">Pirate Weight:</label>
  <p><input type="text" id="pirate_weight" name="pirate[weight]"></p>

  <!-- Ships -->
  <h2>New Ship(s)</h2>
  <label for="ship_name_1">Ship 1 Name:</label>
  <p><input type="text" id="ship_name_1" name="pirate[ships][][name]"></p>
  <label for="ship_type_1">Ship 1 Type:</label>
  <p><input type="text" id="ship_type_1" name="pirate[ships][][type]"></p>
  <label for="ship_booty_1">Ship 1 Booty:</label>
  <p><input type="text" id="ship_booty_1" name="pirate[ships][][booty]"></p>
  <label for="ship_name_2">Ship 2 Name:</label>
  <p><input type="text" id="ship_name_2" name="pirate[ships][][name]"></p>
  <label for="ship_type_2">Ship 2 Type:</label>
  <p><input type="text" id="ship_type_2" name="pirate[ships][][type]"></p>
  <label for="ship_booty_2">Ship 2 Booty:</label>
  <p><input type="text" id="ship_booty_2" name="pirate[ships][][booty]"></p>




  <input type="submit" value="Submit">
</form>