<h1>Create a Pirate!</h1>

<form action="/pirates" method="post">
  <h2>Pirate Info</h2>
  <p><label for="pirate_name">Pirate Name:</label> <input id="pirate[name]" type="text" name="pirate[name]"></p>
  <p><label for="pirate_weight">Pirate Weight:</label> <input id="pirate[weight]" type="text" name="pirate[weight]"></p>
  <p><label for="pirate_height">Pirate Height:</label> <input id="pirate[height]" type="text" name="pirate[height]"></p>

  <h2>Ship Info</h2>
  <p><label for="ship_1_name">Ship 1 Name:</label> <input id="ship_name_1"type="text" name="pirate[ships][][name]"></p>
  <p><label for="ship_1_type">Ship 1 Type:</label> <input id="ship_type_1" type="text" name="pirate[ships][][type]"></p>
  <p><label for="ship_1_booty">Ship 1 Booty:</label> <input id="ship_booty_1" type="text" name="pirate[ships][][booty]"></p>

  <p><label for="ship_1_name">Ship 2 Name:</label> <input id="ship_name_2" type="text" name="pirate[ships][][name]"></p>
  <p><label for="ship_1_type">Ship 2 Type:</label> <input id="ship_type_2" type="text" name="pirate[ships][][type]"></p>
  <p><label for="ship_1_booty">Ship 2 Booty:</label> <input id="ship_booty_2" type="text" name="pirate[ships][][booty]"></p>
  <input type="submit" value='Submit'>
</form>
