<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pirates</title>
  </head>
  <body>
    <h2>Pirate</h2>
    <div class="student">
      <h4>Name:<%=@new_pirate.name%></h4>
      <h4>Height:<%=@new_pirate.height%></h4>
      <h4>Weight:<%=@new_pirate.weight%></h4>
    </div>
    <h2>Ships</h2>
    <%@ships.each do |ship|%>
      <div class ="ship">
        <p>Name: <%= ship.name%></p>
        <p>Type: <%= ship.type%></p>
        <p>Booty: <%= ship.booty%></p>
      </div><br>
      <% end %>

  </body>
</html>
