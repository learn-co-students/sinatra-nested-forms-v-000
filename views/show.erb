<h1>Pirate</h1>
<div class="pirates">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div>


<h2>Ships</h2>
<div class="ships">
<% @ships.each do |vessel| %>
    <p>Name: <%= vessel.name %></p><br>
    <p>Type: <%= vessel.type %></p><br>
    <p>Booty: <%= vessel.booty %></p><br>
<% end %>
</div>
