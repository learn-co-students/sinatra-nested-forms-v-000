<h1>Input pirate and ship information here:</h1>
<form action = "/pirates" method = "POST">
  <label for = "pirate">Pirate</label>
  Name: <input type = "text" name = "pirate[name]"><br>
  Weight: <input type = "text" name = "pirate[weight]"><br>
  Height: <input type = "text" name = "pirate[height]"><br><br>

  <label for = "ships">Ships</label>
  Name: <input id = "ship_name_1" type = "text" name = "pirate[ships][][name]"><br>
  Type: <input id = "ship_type_1" type = "text" name = "pirate[ships][][type]"><br>
  Booty: <input id = "ship_booty_1" type = "text" name = "pirate[ships][][booty]"><br><br>

  <label for = "ships">Ships</label>
  Name: <input id = "ship_name_2" type = "text" name = "pirate[ships][][name]"><br>
  Type: <input id = "ship_type_2" type = "text" name = "pirate[ships][][type]"><br>
  Booty: <input id = "ship_booty_2" type = "text" name = "pirate[ships][][booty]"><br><br>
  <button type = "submit">Submit</button>
</form>
